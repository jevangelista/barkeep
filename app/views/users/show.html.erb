<div class="fav-head-font">
  	<h1>Welcome, <%= @user.name %>!</h1>


	<div>
	<%= button_to "Make a New Drink", emotions_path, method: "get",  class: "btn btn-default"  %>
	</div>
</div>
<br><br>

<div class="div-line"></div>


<div class="container-fluid">


	<h2 class="fav-head-font">Here Are Your Favorite Drinks </h2>
    <div class="fav-drink-container">
        <% @favorites.each do |favorite| %>
            <div class="fav-drinks">

                <div class="fav-img">
                    <%= link_to(image_tag("#{favorite.image}", class: "fav-drink-image"), "/drinks/#{favorite.id}")%>
                    <h2> <%= link_to favorite.name, "/drinks/#{favorite.id}", class: "type-bebas fav-name-font" %></h2>
                </div>
            </div>

        <% end %>
    </div>


</div>