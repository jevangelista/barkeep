<div class="drinks-container">
	<%= image_tag @drink.image, class: "drink-image" %>
	<div class="drinks-font type-bebas"> <%= @drink.name %></div>
		<div class="emotions-font"> <%= @drink.name %></div>
</div>



<div id="recipe-container">
	    <div class="left-ingredients">
	                <h2 class="type-news-cycle"> INGREDIENTS: </h2>
	                    <% @drink.ingredients.each do |i| %>
	                       <p class="type-anon-pro"><%= i %></p>
	                        <% end %>
	          
	    </div>
	    <div class="right-instructions">

	            <h2 class="type-news-cycle"> INSTRUCTIONS: </h2>
	                    <p class="type-anon-pro"> <%= @drink.instructions %></p>
	    </div>
</div>

	<div class="recipe-button-area">
		<div class="recipe-button">
			<a href="#player" id="watch"> Watch How-To</a>
		</div>


		<% if current_user %>
		<div class="recipe-button">
		  <%= link_to "Unsave Drink",   favorite_drink_path(@drink, type: "unfavorite"), method: :put %>
		</div>
		<% end %>
	</div>



<div id="player">
	 <iframe class="video w100 video-player" src="//www.youtube.com/embed/videoID" frameborder="0" allowfullscreen></iframe>
</div>
